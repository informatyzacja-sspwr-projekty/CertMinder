            }

            header a,
            header a:visited {
                color: #fff;
                text-decoration: none;
            }
            header h1 {
                display: inline;
                font-size: 200%;
                margin: 0;
                padding: 0;
                padding-left: 10px;
            }
            header h2 {
                display: inline;
                font-size: 120%;
                margin: 0;
                margin-left: 1.0em;
                padding: 0;
                padding-right: 10px;
            }

            main a,
            main a:visited {
                border-bottom: 1px dotted #000;
                color: #000;
                text-decoration: none;
            }

            footer a,
            footer a:visited {
                border-bottom: 1px dotted #000;
                color: #000;
                text-decoration: none;
            }
            footer p {
                font-size: 0.7em;
                float: right;
                margin: 1.0em;
                padding: 0;
            }
